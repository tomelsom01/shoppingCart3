<h2>All Orders</h2>

<% @orders.each do |order| %>
  <p>Order #<%= order.id %> - <%= order.created_at.strftime('%B %d, %Y') %></p>
  <p>Name: <%= order.name %></p>
  <p>Email: <%= order.email %></p>
  <p>Total: $<%= order.calculate_total_price %></p>
  <p>Line Items: </p>
  <ul>
  <% order.cart.cart_items.each do |item| %>
    <li><%= item.quantity %> x <%= item.product.name %> - $<%= item.product.price * item.quantity %></li>
  <% end %>
  </ul>
<% end %>
