<% if user_signed_in? %>
  <%= link_to "Products", products_path, class: "navwhite mr-2" %>
  <% if current_user.cart %>
    <%= link_to "Cart", cart_path(current_user.cart), class: "navwhite mr-2" %>
  <% else %>
    <%= link_to "Create Cart", carts_path, method: :post, class: "navwhite mr-2" %>
  <% end %>
  <%= link_to "Orders", orders_path, class: "navwhite mr-2" %>
  <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "logoutbtn" %>
<% else %>
   <%= link_to "Login", new_user_session_path, class: "btn btn-primary mr-2" %>
  <%= link_to "SignUp", new_user_registration_path, class: "btn btn-secondary" %>
<% end %>
